{% extends "project:template/_base.jinja2" %}
<div class ="blog">
{% block content %}
    <div style=" margin-left: 13px">
        <nav>
        <a href="{{request.route_url('insert')}}" class="btn btn-info" role="button">Adicionar post</a>
        <a href="{{request.route_url('img_test')}}" class="btn btn-info" role="button">Testes de Imagem</a>
        </nav>
    </div>
    <div class="row" style=" margin-left: 13px">
    {%for post in posts%}
        <div class="col-sm-12">
        <h3>{{post.title}}</h3> by {{post.author}}
        <br>
        <div class="max-lines">{{post.content}}</div>
        </div>
    {%endfor%}
    </div>
{%endblock%}
</div>
