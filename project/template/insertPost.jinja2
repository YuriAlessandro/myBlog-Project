{% extends "project:template/_base.jinja2" %}
{% block content %}
<div class="container">
<form method="post">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" name="title" class="form-control" id="title" placeholder="Post title"><p>
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" name="author" class="form-control" id="author" placeholder="Who are you?"><p>
    </div>
    <div class="form-group">
        <label for="content">Post:</label>
        <textarea name="content" class="form-control" id="content" rows="3" placeholder="..."></textarea>
    </div>
    <input type="submit" value="Submit" class="btn btn-default">
    {%if Success%}
    <meta http-equiv="refresh" content="0; url={{request.route_url('home')}}" />
    {%endif%}
</form>
</div>
{%endblock%}